{
  "compilerOptions": {
    "target": "esnext",             
    "module": "esnext",        
    "strict": true,              
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,        
    "outDir": "./src",          
    "rootDir": "./src"           
  },
  "include": ["src"],           
  "exclude": ["node_modules"]    
}
